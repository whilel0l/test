print "じゃんけんゲームを開始します";
<STDIN>;
while(1){
$hand = int(rand 3); #1がグーで、２がちょき　３がパー
print "出したい手を選択してください";
<STDIN>;
print "Zキー(グー）";
print "Xキー(チョキ)";
print "Cキー(パー)";
$data = <STDIN>;
if($data =~ /z/ || /Z/){
  	if($hand == 1){
			print "コンピュータはグーを出した";
			<STDIN>;
			print "あいこです";	
		}
		elsif($hand == 2){
			print "コンピュータはチョキを出した";
			<STDIN>;
			print "貴方の勝ちです";	
		}
		elsif(hand == 3){
			print "コンピュータはパーを出した";
			<STDIN>;
			print "貴方の負けです";	
		}
		else{print "エラーです";}
	}
     	if($data =~ /x/ || /x/){
		if($hand == 1){
			print "コンピュータはグーを出した";
			<STDIN>;
			print "貴方の負けです";	
		}
		elsif($hand == 2){
			print "コンピュータはチョキを出した";
			<STDIN>;
			print "あいこです";
			<STDIN>;	
		}
		elsif(hand == 3){
			print "コンピュータはパーを出した";
			<STDIN>;
			print "貴方の勝ちです";
		}
		else{print "エラーです";}
		}
		if($data =~ /c/ || /C/){
		if($hand == 1){
			print "コンピュータはグーを出した";
			<STDIN>;
			print "貴方の勝ちです";	
		}
		elsif($hand == 2){
			print "コンピュータはチョキを出した";
			<STDIN>;
			print "貴方の負けです";
			<STDIN>;	
		}
		elsif(hand == 3){
			print "コンピュータはパーを出した";
			<STDIN>;
			print "あいこです";	
		}
		else{print "エラーです";}
		
	}	
}

